{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "order_status",
        "payment_status",
        "shipping_update",
        "promotion",
        "system",
        "security",
        "review_request"
      ]
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "message": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "priority": {
      "type": "enumeration",
      "required": true,
      "default": "normal",
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ]
    },
    "status": {
      "type": "enumeration",
      "required": true,
      "default": "unread",
      "enum": [
        "unread",
        "read",
        "archived"
      ]
    },
    "readAt": {
      "type": "datetime"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "sentAt": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "notifications"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    }
  }
}
