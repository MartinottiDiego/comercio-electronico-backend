{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "order_created",
        "order_confirmed",
        "order_shipped",
        "order_delivered",
        "order_cancelled",
        "payment_received",
        "payment_failed",
        "refund_requested",
        "refund_approved",
        "refund_rejected",
        "review_request",
        "promotion",
        "system",
        "security",
        "stock_alert",
        "new_sale",
        "store_rejection",
        "store_approval",
        "store_blocked"
      ]
    },
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "message": {
      "type": "text",
      "maxLength": 1000,
      "required": true
    },
    "priority": {
      "type": "enumeration",
      "required": true,
      "default": "normal",
      "enum": [
        "low",
        "normal",
        "high",
        "urgent"
      ]
    },
    "notificationStatus": {
      "type": "enumeration",
      "required": true,
      "default": "unread",
      "enum": [
        "unread",
        "read",
        "archived"
      ]
    },
    "readAt": {
      "type": "datetime"
    },
    "scheduledAt": {
      "type": "datetime"
    },
    "sentAt": {
      "type": "datetime"
    },
    "metadata": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "notifications"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "recipientEmail": {
      "type": "string",
      "required": true
    },
    "recipientRole": {
      "type": "enumeration",
      "enum": [
        "comprador",
        "tienda",
        "admin"
      ]
    },
    "isEmailSent": {
      "type": "boolean",
      "default": false
    },
    "emailSentAt": {
      "type": "datetime"
    },
    "actionUrl": {
      "type": "string",
      "maxLength": 500
    },
    "actionText": {
      "type": "string",
      "maxLength": 100
    }
  }
}
