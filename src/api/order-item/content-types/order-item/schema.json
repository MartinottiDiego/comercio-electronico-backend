{
  "kind": "collectionType",
  "collectionName": "order_items",
  "info": {
    "singularName": "order-item",
    "pluralName": "order-items",
    "displayName": "Order Item"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order",
      "inversedBy": "order_items"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string"
    },
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "variant": {
      "type": "string"
    },
    "metadata": {
      "type": "json"
    },
    "refundStatus": {
      "type": "enumeration",
      "enum": ["none", "requested", "refunded", "rejected"],
      "default": "none"
    },
    "reviewed": {
      "type": "boolean",
      "default": false
    }
  }
} 