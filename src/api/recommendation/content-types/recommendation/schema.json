{
  "kind": "collectionType",
  "collectionName": "recommendations",
  "info": {
    "singularName": "recommendation",
    "pluralName": "recommendations",
    "displayName": "Recommendation",
    "description": "Personalized product recommendations cache"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "recommendations"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "strategy": {
      "type": "enumeration",
      "enum": [
        "cooccurrence",
        "content",
        "hybrid"
      ],
      "required": true
    },
    "context": {
      "type": "json",
      "required": true
    },
    "generatedAt": {
      "type": "datetime",
      "required": true
    },
    "ttl": {
      "type": "integer",
      "default": 86400
    },
    "metadata": {
      "type": "json"
    }
  }
} 