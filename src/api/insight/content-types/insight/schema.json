{
  "kind": "collectionType",
  "collectionName": "insights",
  "info": {
    "singularName": "insight",
    "pluralName": "insights",
    "displayName": "Insight",
    "description": "Insights automáticos generados por el sistema de análisis"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "type": {
      "type": "enumeration",
      "enum": [
        "sales",
        "inventory",
        "user_behavior",
        "marketing",
        "product",
        "trend",
        "growth",
        "revenue",
        "engagement",
        "conversion",
        "user_registration",
        "store_activity",
        "top_products",
        "category_trends"
      ],
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "description": {
      "type": "text",
      "required": true
    },
    "severity": {
      "type": "enumeration",
      "enum": [
        "low",
        "medium",
        "high",
        "critical"
      ],
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "scope": {
      "type": "enumeration",
      "enum": [
        "global",
        "store",
        "user"
      ],
      "required": true,
      "default": "global"
    },
    "targetType": {
      "type": "enumeration",
      "enum": [
        "admin",
        "store",
        "user"
      ],
      "required": true,
      "default": "admin"
    },
    "targetId": {
      "type": "string"
    },
    "data": {
      "type": "json"
    },
    "recommendations": {
      "type": "json"
    },
    "timestamp": {
      "type": "datetime",
      "required": true
    },
    "storeId": {
      "type": "string"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "actionRequired": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 1
    }
  }
} 