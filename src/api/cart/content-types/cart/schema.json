{
  "kind": "collectionType",
  "collectionName": "carts",
  "info": {
    "singularName": "cart",
    "pluralName": "carts",
    "displayName": "Cart"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "sessionId": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "abandoned",
        "converted",
        "expired"
      ],
      "default": "active",
      "required": true
    },
    "total": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "required": true
    },
    "subtotal": {
      "type": "decimal",
      "default": 0,
      "min": 0,
      "required": true
    },
    "tax": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "shipping": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "currency": {
      "type": "string",
      "default": "EUR",
      "required": true
    },
    "expiresAt": {
      "type": "datetime"
    },
    "lastActivity": {
      "type": "datetime",
      "required": true
    },
    "metadata": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "carts"
    },
    "cart_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::cart-item.cart-item",
      "mappedBy": "cart"
    },
    "shipping_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "billing_address": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    }
  }
}
